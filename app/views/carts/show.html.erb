<div class="container mt-3">
  <div class="row">
    <div class="col-sm-6">
      <h2>Cart</h2>
    </div>
    <div class="col-sm-6 text-center">
      <%= link_to 'Continue Shopping', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>No.</th>
        <th>Item Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
        <% @cart.line_items.each_with_index do |line_item, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= line_item.product.name %></td>
            <td>$<%= line_item.product.price %></td>
            <td>
              <%= line_item.quantity %>
              <div class="btn-group">
                <%= button_to  '+', line_items_add_quantity_path(id: line_item), class: 'btn btn-success', method: :post %>
                <%= button_to  '-', line_items_reduce_quantity_path(id: line_item), class: 'btn btn-danger', method: :post %>
              </div>
            </td>
            <td>
              <%= button_to  'Remove Item', line_item_path(line_item), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td><strong>Total:</strong> $<%= current_user.cart.total_price %></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
