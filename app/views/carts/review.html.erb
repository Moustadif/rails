<div class="container">
  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        <span class="badge badge-secondary badge-pill"><%= @current_cart.total_quantity %></span>
      </h4>

      <ul class="list-group mb-3">
        <% @current_cart.line_items.each do |line_item| %>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0"><%= line_item.product.name %></h6>
              <small class="text-muted"><%= line_item.product.name %></small>
            </div>
            <div>
              <h6 class="my-0"><%= line_item.product.price %></h6>
              <small class="text-muted">x<%= line_item.quantity %></small>
            </div>
          </li>
        <% end %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Total (USD)</span>
          <strong>$<%= @current_cart.total_price %></strong>
        </li>
      </ul>
    <%= link_to 'Place Order', place_order_carts_path(id: @current_cart), class: 'btn btn-success', method: :post %>

    </div>
    <div class="col-md-8 order-md-1">
      <h2>Shipping Address</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>Street</th>
            <th>State</th>
            <th>City</th>
            <th>Zip</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @current_cart.shipping_address.street %></td>
            <td><%= @current_cart.shipping_address.state %></td>
            <td><%= @current_cart.shipping_address.city %></td>
            <td><%= @current_cart.shipping_address.zip %></td>
            <td>Edit</td>
          </tr>
          </tbody>
        </table>
      </div>
      <h2>Billing Address</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>Street</th>
            <th>State</th>
            <th>City</th>
            <th>Zip</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @current_cart.billing_address.street %></td>
            <td><%= @current_cart.billing_address.state %></td>
            <td><%= @current_cart.billing_address.city %></td>
            <td><%= @current_cart.billing_address.zip %></td>
            <td>Edit</td>
          </tr>
          </tbody>
        </table>
      </div>
      <div class="table-responsive">
        <table class="table">
          <thead>
          <tr>
            <th>Delivery</th>
            <th>Payment</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @current_cart.delivery_type.delivery_via %> Edit</td>
            <td><%= @current_cart.payment_type.payment_via %> Edit </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">Â© 2017-2018 Company Name</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>