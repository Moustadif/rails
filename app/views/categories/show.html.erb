<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="card-columns">
  <% @category.products.each do |product| %>
    <div class="card" style="width: 18rem;">
      <%= link_to product do %>
        <%= image_tag product.image_url.to_s, class: 'card-img-top', alt: product.name %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= truncate(product.description, length: 30) %></p>
        </div>
      <% end %>
      <%= link_to 'Add to Cart', '#' %>
    </div>
  <% end %>
</div>