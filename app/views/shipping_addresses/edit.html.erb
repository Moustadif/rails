<h1>Editing Shipping Address</h1>

<%= render 'form', shipping_address: @shipping_address %>

<%= link_to 'Back', cart_path(@current_cart) , class: 'btn btn-primary' %>

<% if @current_cart.billing_address.present? %>
    <%= link_to 'Next', edit_billing_address_path , class: 'btn btn-success' %>
<% else %>
    <%= link_to 'Next', new_billing_address_path , class: 'btn btn-success' %>
<% end %>
