<h1><%= @category.name %></h1>

<% @category.products.each do |product| %>
  <%= link_to category_product_path(product) do %>
    <div class="card" style="width: 18rem;">
      <%= image_tag product.image_url.to_s, class: 'card-img-top', alt: product.name %>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
      </div>
    </div>
  <% end %>
<% end %>

