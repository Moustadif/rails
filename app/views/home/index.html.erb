<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1>Welcome to Kinbo-E.com!</h1>
  </div>
</div>

<div class="card-columns">
  <% @products.each do |product| %>
    <div class="card" style="width: 18rem;">
      <%= link_to product do %>
        <%= image_tag product.image_url.to_s, class: 'card-img-top', alt: product.name %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= truncate(product.description, length: 30) %></p>
        </div>
      <% end %>
      <div class="row">
        <div class="col-sm-6">
          <%= button_to 'Add to Cart', line_items_path(product_id: product), class: 'btn btn-primary', method: :post %>
        </div>
        <div class="col-sm-6">$<%= product.price %></div>
      </div>
    </div>
  <% end %>
</div>
