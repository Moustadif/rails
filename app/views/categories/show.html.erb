<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="card-columns">
  <% @category.products.each do |product| %>
    <div class="card">
      <%= link_to product do %>
        <%= image_tag product.image_url.to_s, class: 'card-img-top', alt: product.name %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= truncate(product.description, length: 30) %></p>
        </div>
      <% end %>
      <div class="d-flex">
        <div class="p-2 bg-info flex-fill text-center">
          <%= button_to 'Add to Cart', line_items_path(line_item: { product_id: product, cart_id: @current_cart }), class: 'btn btn-primary', method: :post %>
        </div>
        <div class="p-2 bg-warning flex-fill text-center">$<%= product.price %></div>
      </div>
    </div>
  <% end %>
</div>